{
    "manifest_version": 3,
    "name": "CU LMS Enhancer",
    "version": "0.1",
    "description": "Добавляет функционал архивации курсов и обновления статусов задач.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://my.centraluniversity.ru/*" 
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://my.centraluniversity.ru/*"
            ],
            "js": [
                "debug_utils.js",
                "courses_fix.js", 
                "tasks_fix.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*.svg", 
                "icons/*.png"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}